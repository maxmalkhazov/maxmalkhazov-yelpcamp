<% include ../partials/header %>

<div class="container">
    <header class="page-header">
        <div class="container">
            <h1><i class="fa fa-globe" aria-hidden="true"></i> Welcome to YelpCamp!</h1>
            <h4>View the largest collection of campgrounds in North-America</h4>
            <p>
                <a class="btn btn-primary btn-md" href="campgrounds/new"><i class="fa fa-plus" aria-hidden="true"></i> Add a New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                </div>
                <div class="caption">
                    <h4><%= campground.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        <% }); %>
    </div>

</div>

<% include ../partials/footer %>